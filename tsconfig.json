
{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client"],
    "rootDir": "."
  },
  "include": [
    "index.tsx",
    "App.tsx",
    "supabaseClient.ts",
    "types.ts",
    "translations.ts",
    "components/**/*",
    "context/**/*",
    "pages/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "supabase"
  ]
}
